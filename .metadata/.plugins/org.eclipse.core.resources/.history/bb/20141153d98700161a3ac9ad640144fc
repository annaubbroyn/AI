
//import java.util.*;

public class Node {
	
	
	private int subproblem = 1;
	
	private int g;
	private int h;
	private int f;
	private State state;
	public Node parent;
	public Node kids;
	public Node nextInQUEUE;
	public Node nextSibling;
	
	public void print(){
		//print node (state)
	}
	
	public int arcCost(Node P)
	{
		//Calculate cost
		int cost = 0;
		return cost;
	}
	
	public void calcH(State finalState){ 
		if(this.subproblem == 1)
			this.h = (finalState.getX()-this.state.getX())^2 + (finalState.getY()-this.state.getY())^2; 
	}
	
	public void updateG(int g)
	{
		this.g = g;
		Node kid = this.kids;
		while(kid != null)
		{
			kid.updateG(g + kid.arcCost(this));
			kid.updateF();
			kid = kid.nextSibling;
		}
		
	}
	
	public void updateF(){
		this.f = this.g + this.h;
	}
	
	public boolean isEqualTo(Node X){
		//Compare state
		return false;
	}
	
	
	public int getG() {
		return g;
	}
	public int getH() {
		return h;
	}
	public void setH(int h) {
		this.h = h;
	}
	public int getF() {
		return f;
	}
	public void setF(int f) {
		this.f = f;
	}

	public State getState() {
		return state;
	}

	public void setState(State state) {
		this.state = state;
	}

}
